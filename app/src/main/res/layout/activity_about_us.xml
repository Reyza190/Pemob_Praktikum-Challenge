<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tertiary"
    android:orientation="vertical"
    tools:context=".HomepageActivity">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/topNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_bg"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/gothammedium"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-80dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tertiary"
            tools:context=".AboutUsActivity">



            <LinearLayout
                android:id="@+id/sec1"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/photo_1"
                            android:clickable="true"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/round_btt"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ali" />

                        <TextView
                            android:text="Moh. Ali Rafli"
                            android:fontFamily="@font/gothammedium"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="IG : alirafli_"
                            android:fontFamily="@font/gothamlight"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/photo_3"
                            android:background="@drawable/round_btt"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dapa"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>

                        <TextView
                            android:text="Daffa Yanuardhana"
                            android:fontFamily="@font/gothammedium"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="IG : daffayanuardhana"
                            android:fontFamily="@font/gothamlight"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/photo_2"
                            android:background="@drawable/round_btt"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rheza"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>

                        <TextView
                            android:text="Rheza Firmandha"
                            android:fontFamily="@font/gothammedium"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="IG : rheza.frmdha"
                            android:fontFamily="@font/gothamlight"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/photo_4"
                            android:background="@drawable/round_btt"
                            android:scaleType="fitCenter"
                            android:src="@drawable/daniel"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>

                        <TextView
                            android:text="Daniel Sasongko"
                            android:fontFamily="@font/gothammedium"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="IG : danielsasongko"
                            android:fontFamily="@font/gothamlight"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/photo_5"
                android:background="@drawable/round_btt"
                android:scaleType="fitCenter"
                android:src="@drawable/yona"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/sec1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/txt_5"
                android:text="Alfrenanda Yonathan"
                android:fontFamily="@font/gothammedium"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/photo_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ig_5"
                android:text="IG : daffayanuardhana"
                android:fontFamily="@font/gothamlight"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txt_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/ig_5"
                android:orientation="vertical"
                android:background="#591DB954"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gothambold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/contacts"
                    android:layout_marginStart="50dp"
                    android:layout_width="300dp"
                    android:layout_height="150dp"/>



            </LinearLayout >





        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bottom_bar_bg"
        android:paddingTop="20dp"
        app:itemIconTint="@color/white"
        android:layout_marginTop="-70dp"
        app:menu="@menu/bottom_bar_menu"/>

</LinearLayout>

